<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.upt.cti.smartwallet.MainActivity">


    <Button
        android:id="@+id/bUpdate"
        android:layout_width="377dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:text="UPDATE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eExpenses" />

    <EditText
        android:id="@+id/eExpenses"
        android:layout_width="146dp"
        android:layout_height="23dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/tExpenses"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/eIncome"
        android:layout_width="146dp"
        android:layout_height="21dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/tIncome"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/tExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Expenses"
        app:layout_constraintTop_toBottomOf="@+id/eIncome"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/tIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Income"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/tStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/bSearch"
        tools:layout_editor_absoluteX="176dp" />

    <Button
        android:id="@+id/bSearch"
        android:layout_width="374dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:text="Search"
        app:layout_constraintTop_toBottomOf="@+id/monthSpinner"
        tools:layout_editor_absoluteX="20dp" />

    <Spinner
        android:id="@+id/monthSpinner"
        android:layout_width="208dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/bUpdate"
        tools:layout_editor_absoluteX="16dp" />
</android.support.constraint.ConstraintLayout>